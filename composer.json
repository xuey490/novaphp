{
    "name": "blue2004/novaphp",
    "description": "A lightweight Powerful Fast, Simple, Safty PHP framework with Symfony components",
    "type": "project",
	 "keywords": [
		"novaphp",
		"Symfony",
		"Thinkphp",
		"ThinkORM",
		"FPM",
		"flexible",
		"php framework"
	],
	
    "license": "MIT",
    "authors": [
        {
            "name": "blue2004",
            "email": "xuey863toy@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "ezyang/htmlpurifier": "^4.18",
        "league/commonmark": "^2.6",
        "monolog/monolog": "3.7.0",
        "ramsey/uuid": "^4.9",
        "symfony/cache": "^7.3",
        "symfony/config": "^7.3",
        "symfony/dependency-injection": "^7.3",
        "symfony/dotenv": "^7.3",
        "symfony/finder": "^7.3",
        "symfony/http-foundation": "^7.3",
        "symfony/http-kernel": "^7.3",
        "symfony/routing": "^7.3",
        "symfony/translation": "^7.3",
        "symfony/yaml": "^7.3",
        "topthink/think-orm": "^3.0",
        "topthink/think-template": "^3.0",
        "twig/twig": "^3.14",
        "vlucas/valitron": "^1.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.88",
        "icanhazstring/composer-unused": "^0.9.5",
        "phpunit/phpunit": "*",
        "symfony/var-dumper": "^6.0 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "Framework\\": "framework/",
            "App\\": "app/"
        },
        "files": [
            "framework/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "platform-check": false,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
