{
    "name": "your-vendor/your-framework",
    "description": "A lightweight PHP framework with Symfony components",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Your Name",
            "email": "your.email@example.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "symfony/routing": "^6.0",
        "symfony/http-foundation": "^6.0",
        "symfony/http-kernel": "^7.2",
        "doctrine/annotations": "^2.0",
        "symfony/finder": "^7.3",
        "monolog/monolog": "^3.9",
        "symfony/dependency-injection": "^7.3",
        "symfony/config": "^7.3",
        "topthink/think-orm": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "symfony/var-dumper": "^6.0 || ^7.0"
    },
    "autoload": {
        "psr-4": {
            "Framework\\": "framework/",
            "App\\": "app/"
        },
        "files": [
            "framework/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "post-autoload-dump": [
            "@php bin/framework cache:clear"
        ]
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
